    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.17.0",
    "eslint-plugin-github": "^4.3.5",
